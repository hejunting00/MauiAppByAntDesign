@using AntDesign.ProLayout
@using MauiAppByAntDesign.Data
@inherits LayoutComponentBase

@if(StaticMap.userName == "")
{
    <MauiAppByAntDesign.Components.Pages.Login />
}
else
{
    <AntDesign.ProLayout.BasicLayout Logo="@("/logo.png")" SiderWidth="210"
                                     MenuData="MenuData">
        <ChildContent>
            @Body
        </ChildContent>
        <FooterRender>
            <FooterView Copyright="MauiBlazorApp" Links="Links"></FooterView>
        </FooterRender>
    </AntDesign.ProLayout.BasicLayout>

    <SettingDrawer HideCopyButton="false" />
}

